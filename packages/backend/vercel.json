{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "routes": [
    {
      "src": "^/$",
      "dest": "api/route.ts"
    },
    {
      "src": "/api/health",
      "dest": "api/health/route.ts"
    },
    {
      "src": "/api/auth/.*",
      "dest": "api/auth/[...route].ts"
    },
    {
      "src": "/api/games/.*",
      "dest": "api/games/[...route].ts"
    },
    {
      "src": "/api/articles/.*",
      "dest": "api/articles/[...route].ts"
    },
    {
      "src": "/api/reviews/.*",
      "dest": "api/reviews/[...route].ts"
    },
    {
      "src": "/api/platforms/.*",
      "dest": "api/platforms/[...route].ts"
    },
    {
      "src": "/api/categories/.*",
      "dest": "api/categories/[...route].ts"
    },
    {
      "src": "/api/companies/.*",
      "dest": "api/companies/[...route].ts"
    }
  ]
}