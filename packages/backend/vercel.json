{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "api/health/route.ts"
    },
    {
      "source": "/api/auth/.*",
      "destination": "api/auth/[...route].ts"
    },
    {
      "source": "/api/games/.*",
      "destination": "api/games/[...route].ts"
    },
    {
      "source": "/api/articles/.*",
      "destination": "api/articles/[...route].ts"
    },
    {
      "source": "/api/reviews/.*",
      "destination": "api/reviews/[...route].ts"
    },
    {
      "source": "/api/platforms/.*",
      "destination": "api/platforms/[...route].ts"
    },
    {
      "source": "/api/categories/.*",
      "destination": "api/categories/[...route].ts"
    },
    {
      "source": "/api/companies/.*",
      "destination": "api/companies/[...route].ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}