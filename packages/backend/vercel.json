{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "rewrites": [
    {
      "source": "^/$",
      "destination": "api/route.ts"
    },
    {
      "source": "/api/health",
      "destination": "api/health/route.ts"
    },
    {
      "source": "/api/auth/:path*",
      "destination": "api/auth/[...route].ts"
    },
    {
      "source": "/api/games/:path*",
      "destination": "api/games/[...route].ts"
    },
    {
      "source": "/api/articles/:path*",
      "destination": "api/articles/[...route].ts"
    },
    {
      "source": "/api/reviews/:path*",
      "destination": "api/reviews/[...route].ts"
    },
    {
      "source": "/api/platforms/:path*",
      "destination": "api/platforms/[...route].ts"
    },
    {
      "source": "/api/categories/:path*",
      "destination": "api/categories/[...route].ts"
    },
    {
      "source": "/api/companies/:path*",
      "destination": "api/companies/[...route].ts"
    }
  ]
}